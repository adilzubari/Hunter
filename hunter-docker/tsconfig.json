{
  "compilerOptions": {
    "target": "ES2022", // Modern target for Node.js and Puppeteer
    "module": "commonjs", // Node.js-compatible modules
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"], // Required for Puppeteer + Node
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["entrypoint.ts"]
}
